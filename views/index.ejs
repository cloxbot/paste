</select>

<!-- Password Field -->
<input type="password" name="password" placeholder="Password (optional)">
  
        <div id="editor"></div> <!-- CodeMirror container -->
        <input type="hidden" id="pasteContentInput" name="content"> <!-- Hidden input field -->
    </div>
    <div class="button-container">
