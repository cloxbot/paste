<script>
    function remove(pasteId) {
        fetch(`/delete/${pasteId}`, {
            method: 'DELETE',
        })
        .then(response => response.json())
        .then(data => {
            if(data.success) {
                alert('Paste deleted successfully!');
                location.reload();
            } else {
                alert('Error deleting paste!');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting paste!');
        });
    }
</script>

