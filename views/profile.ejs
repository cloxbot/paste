<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="icon" href="public/uploads/avatar-1692572078209-427297268.png" type="image/png" sizes="16x16">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="public/profile.css">
    <title>Profile</title>
</head>

<body>
  <%- include('./partials/navbar', { isAuthenticated: isAuthenticated }); %>
    <div class="profile-container">
        <div class="avatar">
    <% if (user.avatar && user.avatar.data) { %>
        <img src="data:<%= user.avatar.contentType %>;base64,<%= user.avatar.data.toString('base64') %>" alt="User Avatar">
    <% } else { %>
        <!-- You can put a default or placeholder image here -->
        <img src="/path-to-default-avatar.png" alt="Default Avatar">
    <% } %>
</div>

        <h1 style="<%= user.customCSS %>"><%= user.username %></h1>
        <p>Email: <%= user.email %></p>
        <div class="actions">
            <a href="/edit-profile" class="edit-profile">Edit Profile</a>
            <a href="/logout" class="logout">Logout</a>
          <!-- Somewhere appropriate in the profile template -->
            <a href="/my-pastes" class="view-pastes-btn">View My Pastes</a>

        </div>
      <div class="profile-info">
    <p><strong>Pastes:</strong> <%= pastesCount %></p>
    <p><strong>Total Views:</strong> <%= viewsCount %></p>
</div>
</div>



    
</body>

</html>
